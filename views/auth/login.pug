extends ../layouts/common.pug
block content
    body
        h1 Create User

        if errors
            each error in errors
                .alert.alert-danger= error
        img(src="/images/fever.png")
        form(action="/auth/login", method="POST")
            .form-group
                label(for="email") Email
                input#name.form-control(name="email", type="text", value=values ? values.email : "")
            .form-group    
                label(for="pass") Pass
                input#phone.form-control(name="pass",type="text", value=values ? values.pass : "")
            button.btn-btn-primary Create