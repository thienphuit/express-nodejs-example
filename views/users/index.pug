extends ../layouts/common.pug
block content
    body
        h1 Users
            .d-flex.align-items-center
                a.btn.btn-primary(href="users/create") New
                form.ml-auto(method="GET", class="d-flex")
                    input(type="text", class="form-control")
                    button(type="button", class="btn btn-success ml-2") Success
            table.table
                tr
                    th Name
                    th Phone
                    th Action
                each user in users
                    tr
                        td= user.name
                        td= user.phone
                        td 
                            a.btn.btn-light(href="/users" +user.id) View